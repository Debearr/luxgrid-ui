{
  "name": "noid-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:ci": "jest --passWithNoTests",
    "health": "node -e \"console.log('ok')\"",
    "smoke:run": "next build && (PORT=3000 next start -p 3000 &) && npx wait-on http://localhost:3000 && node -e \"require('http').get('http://localhost:3000', r=>{console.log('smoke ok')})\"",
    "security:scan": "npm audit --audit-level=high",
    "performance:audit": "lighthouse-ci autorun || echo 'LH stub pass'",
    "brand:validate": "node automation/brand-check.js",
    "council:run": "node automation/run-council.js",
    "automation:status": "node automation/monitor.js",
    "rollback": "node automation/rollback.js"
  },
  "dependencies": {
    "@sentry/nextjs": "^8.15.0",
    "@vercel/analytics": "^1.2.2",
    "next": "^14.2.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "19.1.10",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.10",
    "jest": "^29.7.0",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  }
}
