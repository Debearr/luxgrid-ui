<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 160">
  <style>
    @font-face { font-family: 'NoidluxSerif'; src: local('Georgia'), local('Times New Roman'), serif; }
    .word {
      font: 600 64px/1.2 'NoidluxSerif', serif;
      letter-spacing: 2px;
    }
  </style>
  <!-- Background (quiet luxury: subtle off-black with soft edges) -->
  <rect width="640" height="160" rx="28" fill="#0a0a0a"/>
  
  <!-- Wordmark -->
  <text x="50%" y="50%" class="word" fill="url(#grad)" text-anchor="middle" dominant-baseline="middle">
    Noidlux
  </text>
  
  <!-- Gradient stroke/fill -->
  <defs>
    <linearGradient id="grad" x1="0" x2="1" y1="0" y2="1">
      <stop offset="0%" stop-color="#d8d8d8"/>
      <stop offset="50%" stop-color="#b6b6b6"/>
      <stop offset="100%" stop-color="#8a8a8a"/>
    </linearGradient>
  </defs>
</svg>

